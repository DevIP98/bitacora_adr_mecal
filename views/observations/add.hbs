<script>
// Establecer la fecha actual por defecto
document.addEventListener('DOMContentLoaded', function() {
    const dateInput = document.getElementById('observation_date');
    if (!dateInput.value) {
        const today = new Date().toISOString().split('T')[0];
        dateInput.value = today;
    }
    
    // Manejar clics en preguntas sugeridas
    const questionButtons = document.querySelectorAll('.question-btn');
    const descriptionTextarea = document.getElementById('description');
    
    questionButtons.forEach(button => {
        button.addEventListener('click', function() {
            const question = this.getAttribute('data-question');
            const currentText = descriptionTextarea.value.trim();
            
            // Agregar la pregunta al textarea
            if (currentText === '') {
                descriptionTextarea.value = `游댰 ${question}\nRespuesta: \n\n`;
            } else {
                descriptionTextarea.value = currentText + `\n\n游댰 ${question}\nRespuesta: \n\n`;
            }
            
            // Enfocar el textarea y posicionar el cursor al final
            descriptionTextarea.focus();
            descriptionTextarea.setSelectionRange(descriptionTextarea.value.length, descriptionTextarea.value.length);
            
            // Feedback visual
            this.innerHTML = '<i class="bi bi-check-circle"></i>';
            this.classList.remove('btn-outline-primary', 'btn-outline-success', 'btn-outline-warning');
            this.classList.add('btn-success');
            
            // Restaurar el bot칩n despu칠s de 2 segundos
            setTimeout(() => {
                this.innerHTML = '<i class="bi bi-plus-circle"></i>';
                this.classList.remove('btn-success');
                if (this.getAttribute('data-question').includes('familia') || 
                    this.getAttribute('data-question').includes('triste') ||
                    this.getAttribute('data-question').includes('enojado') ||
                    this.getAttribute('data-question').includes('molesto') ||
                    this.getAttribute('data-question').includes('felicita')) {
                    this.classList.add('btn-outline-primary');
                } else if (this.getAttribute('data-question').includes('sal칩n') ||
                          this.getAttribute('data-question').includes('clases') ||
                          this.getAttribute('data-question').includes('maestra')) {
                    this.classList.add('btn-outline-success');
                } else {
                    this.classList.add('btn-outline-warning');
                }            }, 2000);
        });
    });

    // Validaci칩n del formulario
    const form = document.querySelector('form');
    const submitBtn = document.getElementById('submitBtn');
    
    form.addEventListener('submit', function(e) {
        const observationTypes = document.querySelectorAll('input[name="observation_types"]:checked');
        
        if (observationTypes.length === 0) {
            e.preventDefault();
            
            // Mostrar mensaje de error
            let errorDiv = document.querySelector('.validation-error');
            if (!errorDiv) {
                errorDiv = document.createElement('div');
                errorDiv.className = 'alert alert-warning validation-error mt-3';
                errorDiv.innerHTML = '<i class="bi bi-exclamation-triangle"></i> Debe seleccionar al menos un tipo de observaci칩n.';
                
                const typesSection = document.querySelector('.mb-4');
                typesSection.appendChild(errorDiv);
            }
            
            // Hacer scroll hacia el error
            errorDiv.scrollIntoView({ behavior: 'smooth', block: 'center' });
            
            return false;
        }
        
        // Remover mensaje de error si existe
        const errorDiv = document.querySelector('.validation-error');
        if (errorDiv) {
            errorDiv.remove();
        }
    });
    
    // Remover mensaje de error cuando se seleccione un tipo
    document.querySelectorAll('input[name="observation_types"]').forEach(checkbox => {
        checkbox.addEventListener('change', function() {
            const errorDiv = document.querySelector('.validation-error');
            if (errorDiv && document.querySelectorAll('input[name="observation_types"]:checked').length > 0) {
                errorDiv.remove();
            }
        });
    });
});
</script>
